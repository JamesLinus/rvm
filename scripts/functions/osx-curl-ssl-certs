#!/usr/bin/env bash

__rvm_osx_curl_certs_run()
{
  curl_path="/opt/local/share/curl"

  if [ -d "$curl_path" ] && [ -x "$curl_path" ]; then
    rvm_log "Updating certificates in $curl_path"

    wget https://curl.haxx.se/ca/cacert.pem --output-document="${rvm_tmp_path}/cacert.pem"

     __rvm_try_sudo mv "${curl_path}/curl-ca-bundle.crt" "${curl_path}/curl-ca-bundle.crt-original"
     __rvm_try_sudo mv cacert.pem "${curl_path}/curl-ca-bundle.crt"
  fi
}
